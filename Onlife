                        fenetreprop.blit(proprietebig , (580,40))
                        # page
                        pygame.draw.rect(fenetreprop,color_dark,[50,165,1080,600])
                        fenetreprop.blit(domicile , (75,200))
                        fenetreprop.blit(transport , (75,300))
